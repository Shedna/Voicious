!!! doctype 5

html
    head
        meta(http-equiv="Content-Type", content="text/html", charset="UTF-8")
        meta(name="description", content="Simple application for videoconference")
        meta(name="identifier-url", content="http://www.voicious.com")
        meta(http-equiv="content-Language", content="fr")

        title #{title}

        link(rel="stylesheet", media="screen", type="text/css", href="/public/css/normalize.css")
        link(rel="stylesheet", media="screen", type="text/css", href="/public/css/style.css")
        link(rel="shortcut icon", type="image/png", href="/public/img/favicon.png")
        block style

        :coffeescript
            window.Voicious =
                locals : JSON.parse('!{JSON.stringify(locals)}')
        script(type="text/javascript", src="/public/js/vendor/jquery.js")
        script(type="text/javascript", src="/public/js/global.js")
        block scripts

    body
        block content
